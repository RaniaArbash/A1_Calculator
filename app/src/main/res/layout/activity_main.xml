<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/standerResult"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="1"

                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:inputType="number"
                android:text="2"

                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/plus_ope"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_200"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_200"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_200"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/equal_op"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_200"
            android:gravity="center"
            android:text="="
            android:tag="100"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="C"
                android:tag="200"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/minuse_op"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>






        <Button
            android:id="@+id/advance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@color/purple_200"
            android:backgroundTint="@color/black"
            android:text="Advance - With History"
            android:textColor="@color/black" />

    <TextView

        android:id="@+id/advanceResult"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_gravity="left"
        android:layout_marginTop="20sp"
        android:lineSpacingMultiplier="@android:integer/config_longAnimTime"
        android:maxLines="10"
        android:textSize="25sp"
        android:visibility="invisible" />
    </LinearLayout>

